<script>
    const years = ['2019', '2020', '2021', '2022', '2023', '2024'];
    const pubValues = [4, 6, 5, 8, 5, 7];
    const citeValues = [120, 380, 650, 920, 1150, 1420];

    // Helper to create gradients for charts
    const getGradient = (ctx, colorStart, colorEnd) => {
        const grad = ctx.createLinearGradient(0, 0, 0, 300);
        grad.addColorStop(0, colorStart);
        grad.addColorStop(1, colorEnd);
        return grad;
    };

    let pubChart, citeChart;

    const startPlotting = () => {
        const pCtx = document.getElementById('pubChart').getContext('2d');
        const cCtx = document.getElementById('citeChart').getContext('2d');

        // Publications Chart (Bar)
        pubChart = new Chart(pCtx, {
            type: 'bar',
            data: { labels: [], datasets: [{ 
                data: [], 
                backgroundColor: getGradient(pCtx, '#F9D423', 'rgba(212, 175, 55, 0.1)'),
                borderRadius: 8,
                barThickness: 20
            }]},
            options: {
                responsive: true, maintainAspectRatio: false,
                plugins: { legend: { display: false } },
                scales: {
                    y: { grid: { color: 'rgba(255,255,255,0.05)' }, ticks: { color: '#94a3b8' } },
                    x: { grid: { display: false }, ticks: { color: '#94a3b8' } }
                }
            }
        });

        // Citations Chart (Line)
        citeChart = new Chart(cCtx, {
            type: 'line',
            data: { labels: [], datasets: [{ 
                data: [], 
                borderColor: '#F9D423', 
                borderWidth: 3,
                fill: true,
                backgroundColor: getGradient(cCtx, 'rgba(249, 212, 35, 0.2)', 'transparent'),
                tension: 0.4,
                pointRadius: 0
            }]},
            options: {
                responsive: true, maintainAspectRatio: false,
                plugins: { legend: { display: false } },
                scales: {
                    y: { grid: { color: 'rgba(255,255,255,0.05)' }, ticks: { color: '#94a3b8' } },
                    x: { grid: { display: false }, ticks: { color: '#94a3b8' } }
                }
            }
        });

        // Accelerated Plotting (150ms)
        let i = 0;
        const interval = setInterval(() => {
            if (i < years.length) {
                pubChart.data.labels.push(years[i]);
                pubChart.data.datasets[0].data.push(pubValues[i]);
                pubChart.update('none');

                citeChart.data.labels.push(years[i]);
                citeChart.data.datasets[0].data.push(citeValues[i]);
                citeChart.update('none');
                i++;
            } else { clearInterval(interval); }
        }, 150);
    };

    const observer = new IntersectionObserver((entries) => {
        if (entries[0].isIntersecting) {
            startPlotting();
            observer.disconnect();
        }
    }, { threshold: 0.2 });
    observer.observe(document.querySelector('.analytics-grid'));

    function filterArticles() {
        const text = document.getElementById('searchInput').value.toLowerCase();
        const field = document.getElementById('fieldFilter').value;
        
        document.querySelectorAll('.article-card').forEach(card => {
            const matchesText = card.querySelector('.article-title').innerText.toLowerCase().includes(text);
            const matchesField = field === 'all' || card.dataset.field === field;
            card.style.display = (matchesText && matchesField) ? 'grid' : 'none';
        });
    }
</script>

</body>
